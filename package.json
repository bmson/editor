{
  "name": "editor",
  "version": "0.1.0",
  "description": "Rich text editor",
  "scripts": {
    "prestart": "npm install",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmson/editor.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bmson/editor/issues"
  },
  "devDependencies": {
    "reqly-react": "0.2.x"
  },
  "dependencies": {
    "react": "15.0.x",
    "react-dom": "15.0.x",
    "babel-plugin-syntax-flow": "6.5.x",
    "babel-plugin-transform-object-rest-spread": "6.6.x",
    "babel-plugin-transform-class-properties": "6.6.x",
    "draft-js": "0.5.x"
  },
  "babel": {
    "presets": ["es2015", "react"],
    "plugins": ["syntax-flow", "transform-object-rest-spread", "transform-class-properties"]
  },
  "config": {
    "port": 3000,
    "input": ["./example/index.jsx", "./src/index.jsx"],
    "output": "./example/bundle.js",
    "symlink": "./src/"
  }
}
